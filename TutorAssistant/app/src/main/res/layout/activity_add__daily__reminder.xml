<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_reminder">

    <ImageView
        android:id="@+id/img"
        android:layout_width="243dp"
        android:layout_height="77dp"
        android:layout_gravity="center"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/namelogo"
        android:textAlignment="center" />






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:orientation="vertical"
        android:layout_marginLeft="40dp"
        android:weightSum="20"
        >

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.5" />


        <TextView
            android:id="@+id/nameofthetuition"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:text="Name of The Student"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/oneforall"
            android:textSize="25sp"


            />



        <TextView
            android:id="@+id/amountoftaka"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAllCaps="false"
            android:layout_weight="2"
            android:text="Name of The Student"
            android:textAlignment="textStart"
            android:textSize="25sp"
            android:textColor="@color/oneforall"



            />

        <TextView
            android:id="@+id/Daysyouvegone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAllCaps="false"
            android:layout_weight="1.5"
            android:text="0"
            android:textAlignment="center"
            android:textSize="40sp"

            android:textColor="@color/oneforall"
            />
        <TextView
            android:id="@+id/simpletext2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAllCaps="false"
            android:layout_weight="2"
            android:text="Classes"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="@color/oneforall"
            />

        <Button
            android:id="@+id/button_for_Add"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.4"
            android:background="@drawable/bc"
            android:elevation="15dp"
            android:text="ADD CLASS"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            />

        <Button
            android:id="@+id/button_for_date"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.4"
            android:background="@drawable/bc"
            android:elevation="15dp"
            android:text="SET DATE"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            />

        <Button
            android:id="@+id/button_for_time"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.4"
            android:background="@drawable/bc"
            android:elevation="15dp"
            android:text="SET TIME"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5" />

        <Button
            android:id="@+id/button_to_save"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.4"
            android:background="@drawable/bc"
            android:elevation="15dp"
            android:text="CONFIRM REMINDER"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

















</RelativeLayout>